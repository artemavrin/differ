{
  "name": "differ",
  "displayName": "Differ",
  "description": "Write commits easier with AI",
  "publisher": "artemavrin",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "icon": "./assets/icon.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "differ.generateCommitMessage",
        "title": "Generate Commit Message"
      },
      {
        "command": "differ.addModel",
        "title": "Differ: Add new model"
      },
      {
        "command": "differ.selectModel",
        "title": "Differ: Select current model"
      },
      {
        "command": "differ.removeModel",
        "title": "Differ: Remove model"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "differ.generateCommitMessage",
          "group": "inline",
          "when": "scmProvider == git"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Differ",
      "properties": {
        "differ.instructions": {
          "type": "string",
          "default": "Use English language",
          "description": "Additional instructions to commit message generation",
          "editPresentation": "multilineText"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "openai": "^4.73.1"
  }
}
